---
import Hamburger from "./Hamburger/Hamburger.astro";
---

<nav>
  <span class="hamburger-container">
    <Hamburger />
  </span>
  <ul role="list" class="nav-links">
    <li><a href="#C0deについて">C0deについて</a></li>
    <li><a href="#活動内容">活動内容</a></li>
    <li><a href="#FAQ">FAQ</a></li>
    <li><a href="#アクセス">アクセス</a></li>
    <li><a href="#お問い合わせ">お問い合わせ</a></li>
  </ul>
</nav>

<style>
  nav {
    display: inline-block;
  }

  .hamburger-container {
    position: absolute;
    top: 0;
    right: 16px;
  }

  .nav-links {
    position: absolute;
    padding-left: 0;
  }

  .nav-links li {
    display: inline-block;
    background-color: #f5f5f5;
    text-align: center;
    min-width: 80px;
    transition: transform 0.1s ease-out;
  }

  .nav-links a {
    display: inline-block;
    width: 100%;
    padding: 0 0.5rem;
    color: #333333;
    line-height: 44px;
  }

  .nav-links li:hover {
    transform: scale(1.1);
    transition: transform 0.1s ease-out;
  }

  .nav-links li {
    position: relative;
  }

  .nav-links li::before {
    content: "";
    position: absolute;
    width: 0;
    bottom: 2px;
    left: 50%;
    transform: translateX(-50%);
  }
  .nav-links li:hover::before {
    width: 100%;
    transition: width 0.5s ease-in-out;
    border-bottom: 1px solid var(--yellow);
  }

  @media screen and (max-width: 599px) {
    .nav-links {
      top: -100vh;
      z-index: -1;
    }
    .nav-links.expanded {
      display: flex;
      flex-direction: column;
      width: 100%;
      height: 100vh;
      top: 44px;
      transition: top 0.5s;
      left: 0;
      background: rgba(245, 245, 245, 0.5);
    }
  }

  @media screen and (min-width: 600px) {
    .hamburger-container {
      display: none;
    }

    .nav-links {
      display: flex;
      flex-direction: row;
      top: 0;
      right: 0;
    }
  }
</style>
