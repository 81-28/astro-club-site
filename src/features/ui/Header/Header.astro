---
import C0deImage from "../C0deImage.astro";
import Navigation from "./Navigation/Navigation.astro";
---

<header>
  <a href="#top" class="icon">
    <C0deImage width={44} height={44} />
  </a>
  <Navigation />
</header>

<style>
  header {
    display: block;
    width: 100%;
    height: 45px;
    max-width: 800px;
    position: fixed;
    top: 0;
    left: 50%;
    -webkit-transform: translateX(-50%);
    -ms-transform: translateX(-50%);
    transform: translateX(-50%);
    background-color: #f5f5f5;
    border-bottom: 1px solid #e5e5e5;
    z-index: 1;
  }

  .icon {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
  }
</style>
