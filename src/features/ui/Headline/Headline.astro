---
type Props = {
  iconName:
    | "About"
    | "Content"
    | "Faq"
    | "Location"
    | "Mail"
    | "Twitter"
    | "Works";
  headline: string;
};
const { iconName, headline } = Astro.props;
---

<div class="headline">
  <img src={`${import.meta.env.BASE_URL}${iconName}.svg`} alt="icon" />
  <h2>{headline}</h2>
</div>

<style>
  .headline {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    gap: 10px;
    position: relative;
    font-size: 1.5rem;
  }

  .headline > img {
    margin-top: 0.2rem;
  }

  .headline > h2 {
    font-weight: bold;
    font-size: 1.6rem;
  }

  .headline::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 4px;
    bottom: 8px;
    z-index: -1;

    background: -webkit-gradient(
      linear,
      left top,
      right top,
      from(rgba(248, 219, 119, 1)),
      to(rgba(226, 130, 53, 0.10406169303658963))
    );

    background: -o-linear-gradient(
      left,
      rgba(248, 219, 119, 1) 0%,
      rgba(226, 130, 53, 0.10406169303658963) 100%
    );

    background: linear-gradient(
      90deg,
      rgba(248, 219, 119, 1) 0%,
      rgba(226, 130, 53, 0.10406169303658963) 100%
    );
  }
</style>
